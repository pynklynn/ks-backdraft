    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lit": "^2.7.6",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.5",
    "vite": "^4.4.2"
  }
