{
  "name": "@pynklynn/backdraft",
  "version": "0.1.0",
  "description": "Slots in the light DOM for web components.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
